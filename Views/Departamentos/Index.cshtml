@model IEnumerable<MvcCore.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
    <a asp-action="SeleccionMultiple" asp-controller="Departamentos">Multiples empleados</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Numero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>Imagen</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Numero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <img src="~/images/@item.Imagen" style="width:260px;height:200px" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { iddept = item.Numero }) |
                @Html.ActionLink("Details", "Details", new { iddept = item.Numero }) |
                @Html.ActionLink("Delete", "Delete", new { iddept = item.Numero })
            </td>
            <td></td>
        </tr>
}
    </tbody>
</table>
